@model IEnumerable<BlogListItemVM>
@{
    ViewData["Title"] = "Index";
}

<div class="mx-4">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Blog</h6>
                </div>
                <div class="card-body">
                    <a asp-action="Create" class="btn btn-outline-success my-4">Create</a>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Header</th>
                                <th>Image</th>
                                <th>Created Time</th>
                                <th>Author</th>
                                <th>Description</th>
                                <th colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.Id</th>
                                    <td>@item.Header</td>
                                    <td>
                                        <img width="90" src="@item.Image">
                                    </td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.Author</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
                                    </td>
                                    <td>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>